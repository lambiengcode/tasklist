<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor"
    android:padding="8dp">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="?attr/textcolor"
            android:textSize="22sp"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtInputTitle"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="?attr/textcolor"
            android:textSize="22sp"
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtInputDes"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="?attr/image"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="?attr/textcolor"
                android:textSize="20sp"
                android:text="Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:textColor="?attr/textcolor"
                android:id="@+id/txtDate"
                android:layout_marginLeft="12dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:text="Date"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="?attr/textcolor"
                android:gravity="center"
                android:layout_weight="0.5"
                android:textSize="26sp"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="?attr/textcolor"
                android:id="@+id/txtTime"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:text="Hour"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cbRemind"
                android:textColor="?attr/tintcolor"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:text="Remind Me"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="22dp"
                android:layout_toLeftOf="@+id/btnCancel"
                android:id="@+id/btnApply"
                android:text="Apply"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:background="@drawable/custom_button"
                android:textColor="#fff"/>
            <Button
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:id="@+id/btnCancel"
                android:text="Cancel"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:background="@drawable/custom_button_cancel"
                android:textColor="#000000"/>
        </RelativeLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:textStyle="italic"
            android:textColor="?attr/textcolor"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About me: lambiengcode@gmail.com"/>
    </RelativeLayout>
</LinearLayout>